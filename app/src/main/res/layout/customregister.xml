<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_marginTop="90dp"
    android:background="@drawable/signinwindow"
    android:layout_gravity="center">


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/closeRegisterForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_box"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:padding="0dp"
        android:background="#000000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSignInText"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Registration"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/colorSignInText"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextEmailRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email..."
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorSignInButtons"
            android:padding="6dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/colorSignInText"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextNameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name..."
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorSignInButtons"
            android:padding="6dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname:"
            android:textColor="@color/colorSignInText"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextSurnameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your surname..."
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorSignInButtons"
            android:padding="6dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="@color/colorSignInText"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextUsernameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your username..."
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorSignInButtons"
            android:padding="6dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textColor="@color/colorSignInText"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextPassRedgister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password..."
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorSignInButtons"
            android:padding="6dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat:"
            android:textColor="@color/colorSignInText"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextPassRepeatRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repeat your password..."
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorSignInButtons"
            android:padding="6dp"
            />


    </LinearLayout>





    <android.support.design.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Conitune"
        android:textColor="@color/colorSignInText"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"/>



</LinearLayout>