<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/SignInTheme"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/signinwindow"
    android:layout_gravity="center">


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/closeSignInForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_box"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:padding="0dp"
        android:background="#000000"
        />


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/colorSignInText"
         android:textStyle="bold"
         android:textSize="40dp"
         android:gravity="center"
         android:layout_gravity="center"
         android:text="Sign in"
         />
     
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
         >
          
          


          <android.support.v7.widget.AppCompatEditText
              android:id="@+id/signinEmail"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter your username or email"
              android:textSize="17dp"
              android:text="petarchord@hotmail.com"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:background="@color/colorSignInButtons"
              android:padding="6dp"
              />
          
          
     </LinearLayout>



     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="25dp"
         >




          <android.support.v7.widget.AppCompatEditText
              android:inputType="textPassword"
              android:id="@+id/signinPassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter your password"
              android:textSize="17dp"
              android:text="korgicpa50sd"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:background="@color/colorSignInButtons"
              android:padding="6dp"
              />




     </LinearLayout>


     <android.support.v7.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Forgot Your password?"
    android:textSize="15dp"
    android:layout_marginTop="20dp"
    android:layout_gravity="right"
    android:layout_marginRight="20dp"


    />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/error_text_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error message"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorAccent"
        android:visibility="gone"



        />


    <ProgressBar
        android:id="@+id/circular_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />


     <android.support.v7.widget.AppCompatButton
         android:id="@+id/signInSubmit"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:text="Conitune"
         android:textColor="@color/colorSignInText"
         android:layout_marginTop="20dp"
         android:textAlignment="center"
         android:layout_gravity="center"
         android:background="@drawable/rounded_button"/>



</LinearLayout>
